<% provide(:title, 'Transacción ' + @ordertrans.id.to_s) %>

<h2>Transacción <%= @ordertrans.id %></h2>

<div class="well col-sm-7">
  <div class="col-sm-9">
    <div class="row">
      <div class="col-sm-2">Válida:</div>
      <div class="col-sm-10"></b> <b><%= @ordertrans.success %></b></div>
    </div>
    <div class="row">
      <div class="col-sm-2">Acción:</div>
      <div class="col-sm-10"></b> <b><%= @ordertrans.action %></b></div>
    </div>
    <div class="row">
      <div class="col-sm-2">Aportación:</div>
      <div class="col-sm-10"><b><%= @ordertrans.aportacion %> &euro;</b></div>
    </div>
    <div class="row">
      <div class="col-sm-3">Authorization:</div>
      <div class="col-sm-9"><b><%= @ordertrans.authorization %></b></div>
    </div>
    <div class="row">
      <div class="col-sm-3">Fecha pago:</div>
      <div class="col-sm-9"><b><%= @ordertrans.created_at %></b></div>
    </div>
  </div>
</div>

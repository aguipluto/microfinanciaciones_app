<% content_for :jumbotron do %>
    <section class="jumbotron jumbotron-background">
      <div class="container">
        <% @adviseContainer = true %>
        <div id="advise-container" class="advise-home">
          <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %> alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= value.html_safe %>
              </div>
          <% end %>
        </div>

        <h1>Microfinanciaciones CEU</h1>

        <p class="margin-xxl">Construyendo caminos</p>

        <p class="text-center" title="Proyectos">
          <button id="scrollDown" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-chevron-down"></span>
          </button>
        </p>
      </div>
    </section>
<% end %>
<div class="row">
  <a class="anchor" name="colabora"></a>
  <article class="jumbotron jumbotron-white">
    <a name="colabora"></a>

    <h1 class="text-info text-center">La uni√≥n hace la fuerza, colabora y hazte voluntario
      <span class="glyphicon glyphicon-thumbs-up"></span></h1>
  </article>

  <% @proyectos.in_groups_of(3).each do |group| %>
      <div class="row">
        <% group.each do |p| %>
            <% if p %>
                <%= render p %>
            <% end %>
        <% end %>
      </div>
  <% end %>

  <% @proyectos.each do |p| %>
      <%= render '/shared/modal_proyecto', proyecto: p %>
  <% end %>
</div>

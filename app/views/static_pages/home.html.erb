<% content_for :jumbotron do %>
    <section class="jumbotron jumbotron-background">
      <div class="container">
        <% @adviseContainer = true %>
        <div id="advise-container" class="advise-home">
          <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %> alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= value.html_safe %>
              </div>
          <% end %>
        </div>

        <h1>Microfinanciaciones CEU</h1>

        <p class="margin-xxl">Construyendo caminos</p>

        <p class="text-center" title="Proyectos">
          <button id="scrollDown" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-chevron-down"></span>
          </button>
        </p>
      </div>
    </section>
<% end %>
<div class="row">
  <article class="jumbotron jumbotron-white">
    <h1 class="text-info text-center margin-sm">La unión hace la fuerza, colabora y hazte voluntario
      <span class="glyphicon glyphicon-thumbs-up"></span>
    </h1>

    <div class="row margin-lg">
      <div class="col-md-7 col-xs-12">
        <iframe width="100%" height="316"
                src="//www.youtube.com/embed/Y46UpZYr_Oc?wmode=transparent&showinfo=0&modestbranding=1&theme=light&color=white"
                frameborder="0" allowfullscreen="">
        </iframe>
      </div>
      <div class="col-md-4 col-md-offset-1 col-sm-offset-0">
        <div class="panel panel-inverse">
          <div class="panel-heading margin-lg">
            <h3 class="text-center no-margin">Empieza a ayudar<br/><i class="fa fa-chevron-down fa-fw"></i></h3>
          </div>
          <div class="panel-body text-center">
            <% if !signed_in? %>
                <button class='btn btn-primary btn-block' data-toggle="dropdown" data-target="#dropdown-login">Inscríbete</button>
            <% else %>
                Encuentra abajo el proyecto que más te guste!
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </article>

  <a class="anchor" name="colabora"></a>

  <div class="modal-project-container"></div>
  <div id="home_row_projects">
    <%= render 'proyectos/row_projects' %>
  </div>

</div>

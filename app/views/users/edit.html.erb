<% provide(:title, 'Editar Perfil') %>

<h2>Editar Perfil</h2>

<%= form_for(@user, html: {class: "well col-lg-6"}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :avatar, class: "control-label" %><br />
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name, "Nombre", class: "control-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
    </div>
    <div class="form-group">
      <%= f.label :family_name, "Apellidos", class: "control-label" %>
      <%= f.text_field :family_name, class: "form-control", placeholder: "Apellidos" %>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.label :birthdate, class: "control-label" %>
      <div class="date row">
        <%= f.date_select :birthdate, {:order => [:day, :month, :year], :start_year => 1910, :end_year => 2012}, {:class => 'date-select form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, "Contrase単a", class: "control-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Contrase単a" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Repita contrase単a", class: "control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita contrase単a" %>
    </div>
    <div class="form-group">
      <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
    </div>
<% end %>
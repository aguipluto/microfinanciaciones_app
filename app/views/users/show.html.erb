<% provide(:title, 'Perfil de Usuario') %>

<h2>Perfil de Usuario</h2>

<div class="well col-lg-6">
  <div class="row">
    <div class="col-md-2">Nombre:</div>
    <div class="col-md-3"></b> <b><%= @user.name %></b></div>
  </div>
  <div class="row">
    <div class="col-md-2">Apellidos:</div>
    <div class="col-md-3"><b><%= @user.family_name %></b></div>
  </div>
  <div class="row">
    <div class="col-md-2">Email:</div>
    <div class="col-md-3"><b><%= @user.email %></b></div>
  </div>
  <div class="row">
    <div class="col-md-2">Fecha de registro:</div>
    <div class="col-md-3"><b><%= @user.created_at %></b></div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3"><%= link_to "Editar", edit_user_path(current_user) %></div>
  </div>
</div>

<% provide(:title, 'Registro Usuario') %>

<h2>Nuevo Usuario</h2>

<div class="row">
  <%= form_for(@user, html: {id: "formulario-registro", class: "well col-lg-6"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div id="error_explanation_js">
        <div class="alert alert-danger">
          Compruebe campos en rojo <div id="errores" style="display: none"> Longitud mínima nombre 3 caracteres</div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "Foto de perfil", class: "control-label" %>
        <br/>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "Nombre", class: "control-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
      </div>
      <div class="form-group">
        <%= f.label :family_name, "Apellidos", class: "control-label" %>
        <%= f.text_field :family_name, class: "form-control", placeholder: "Apellidos" %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.label :birthdate, class: "control-label" %>
        <div class="date row">
          <%= f.date_select :birthdate, {:order => [:day, :month, :year], :start_year => 1910, :end_year => 2012}, {:class => 'date-select form-control'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "control-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Repita contraseña", class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repita contraseña" %>
      </div>
      <div class="checkbox">
        <label>
          <%= f.check_box :terms_of_service %> Acepto la <a data-toggle="modal" href="#myModal">política de privacidad</a>
        </label>
      </div>
      <div class="form-group">
        <%= f.submit "Registrar", class: "btn btn-primary", id: "user_submit" %>
      </div>
  <% end %>
  <%= render 'terms_of_service' %>
</div>
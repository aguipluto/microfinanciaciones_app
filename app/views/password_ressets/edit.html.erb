<% provide(:title, 'Cambiar contraseña') %>

<h2>Cambiar contraseña</h2>
<div class="row">
  <%= form_for(@user, url: password_resset_path(params[:id]), html: {class: "well col-lg-6"}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "control-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Repita contraseña", class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Contraseña" %>
      </div>
      <div class="form-inline">
        <%= f.submit "Cambiar contraseña", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
<% provide(:title, 'Pagos') %>

<div class="row">
  <div class="col-sm-3">
    <h2>Pagos</h2>
  </div>
  <div class="col-sm-8">
    <%= form_tag orders_path, method: "get", class: "form-inline formBusqueda" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <p>
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Buscar', id: 'inputBuscar' %>
          <%= button_tag type: 'submit', class: 'btn btn-default', name: nil do %>
              <i class="fa fa-search"></i> Buscar
          <% end %>
        </p>
    <% end %>
  </div>

</div>
<div id="orders">
  <%= render 'orders' %>
</div>

<%= render 'shared/modal_detail' %>
<% provide(:title, @proyecto.titulo) %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h2><%= @proyecto.titulo %>
      <% if current_user_admin? %>
          <div class="pull-right">
            <%= link_to "Editar", edit_proyecto_path(@proyecto), class: 'btn btn-default btn-sm' %>
            <%= link_to "Borrar", @proyecto, method: :delete,
                        data: {confirm: "¿Está seguro?"}, class: 'btn btn-warning btn-sm' %>
          </div>
      <% end %>
    </h2>
  </div>
</div>

<div class="row">
  <ul class="col-sm-3 nav nav-pills nav-stacked">
    <li id="menuIzqShowProject" class="active"><a href="#">Datos del Proyecto</a></li>
    <li id="menuIzqBlogProject"><a href="#">Blog</a></li>
  </ul>
  <div id="showProject" class="col-sm-8">
    <div id="modalId" class="hidden">
      <%= @proyecto.id %>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
      <%= render '/shared/carousel', proyecto: @proyecto %>
    </div>

    <div class="col-xs-12 margin-xs"><%= @proyecto.descripcion_larga.html_safe %></div>
    <div class="col-sm-7" title="Fecha del proyecto">
      <span class="text-muted">Desde el</span> <%= @proyecto.fechaInicio %>
      <span class="text-muted">hasta el</span> <%= @proyecto.fechaFin %>
    </div>
    <div class="col-sm-5"><span class="text-muted">Lugar:</span> <%= @proyecto.lugar %></div>
    <div class="col-xs-12"> <%= render 'shared/progress_bar', proyecto: @proyecto %></div>
    <div class="col-xs-6 text-left">
      <% if @proyecto.total_collected > 0 %>
          <div class="text-success">
            <%= pluralize(@proyecto.total_collected, '€ conseguido', '€ conseguidos') %>
            de <%= @proyecto.cantidad_total.to_i %>€
          </div>
      <% else %>
          <div class="text-info">
            Sé el primero en colaborar!
          </div>
      <% end %>
    </div>
    <div class="col-xs-6 text-right">
      Quedan <%= time_ago_in_words(@proyecto.fin_aportaciones) %>
    </div>
    <div id="modal-volunteers-project-<%= @proyecto.id %>" class="col-sm-12 text-center text-info bold margin-top-xs">
      <%= render 'volunteers/volunteers_project', proyecto: @proyecto %>
    </div>
    <div class="col-xs-6 col-xs-offset-3 margin-sm">
      <%= render 'users/modal_voluunter_form', proyecto: @proyecto %>
    </div>
    <div class="col-xs-12">
      <%= form_tag('/cartItemCreate', method: 'post', class: 'form-horizontal') do %>
          <%= hidden_field_tag :proyecto_id, @proyecto.id %>
          <div class="form-group">
            <div class="col-xs-3 text-primary text-right">
              Colaborar con
            </div>
            <div class="col-xs-7" id="divSlider">
              <%= range_field_tag :aportacion, 5, min: 5, max: 80, id: 'aportationSlider', class: 'form-control aportationSlider' %>
            </div>
            <div id="aportationInfo" class="aportationInfo col-xs-2 large text-primary bold text-left">5€</div>
          </div>
          <div class="form-group">
            <%= submit_tag 'Colaborar', class: 'btn btn-primary btn-xs btn-block' %>
            <button type="button" class="btn btn-default btn-xs btn-block" data-dismiss="modal">Cerrar</button>
          </div>
      <% end %>
    </div>
  </div>
  <div id="blogProject" class="col-sm-8 hidden">
    <%= render @proyecto.blog_posts %>
  </div>
</div>


<div class="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= proyecto.anchobar %>" aria-valuemin="0"
       aria-valuemax="<%= proyecto.totalbar %>" style="clear:both; width: <%= proyecto.anchobar   %>%">
  </div>
  <% if proyecto.total_collected > proyecto.cantidad_total %>
      <div class="progress-bar progress-bar-extracollected" style="width: <%= proyecto.extrabar %>%">
        <span class="sr-only"><%= proyecto.extrabar %>% Extra</span>
      </div>
  <% end %>
</div>
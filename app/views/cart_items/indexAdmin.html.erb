<% provide(:title, 'Aportaciones') %>

<div class="row">
  <div class="col-md-2">
    <h2>Aportaciones</h2>
  </div>
  <div class="col-md-8">
    <%= form_tag '/cartitem/indexadmin', method: "get", class: "form-inline formBusqueda" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <p>
          <%= select_tag :aportationType, options_for_select([ "Pagadas", "Sin Pagar", "Todas" ], params[:aportationType]), class: "form-control select-for-search", id:"select_for_search" %>
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Buscar', id: 'inputBuscar' %>
          <%= submit_tag "Buscar", class: 'btn btn-default', name: nil %>
        </p>
    <% end %>
  </div>

</div>
<div id="aportations">
  <%= render 'cart_items' %>
</div>


<li id="dropdown-login" class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="inicie sesión">
    <span class="glyphicon glyphicon-log-in"></span>
    inicie Sessión
  </a>

  <div class="dropdown-menu dropdown-form">

    <%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-barcode"></span></span>
            <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Iniciar sesión", class: "btn btn-primary btn-block" %>
          <%= link_to "¿Olvidó su contraseña?", new_password_resset_path, class: 'btn btn-link btn-block' %>
        </div>
    <% end %>
  </div>
</li>
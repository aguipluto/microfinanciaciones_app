<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "MicroFinanciaciones CEU", root_path, id: "logo", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "¿Quiénes somos?", about_path %></li>
          <li><%= link_to "Contacte", contact_path %></li>
          <li><%= link_to "Ayuda", help_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Usuario <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Perfil de usuario", current_user %></li>
                  <li><%= link_to 'Opciones', '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Cerrar sesión', signout_path, method: 'delete' %></li>
                </ul>
              </li>
          <% elsif !current_page?(signin_path) %>
              <%= form_for(:session, url: sessions_path, html: {class: "navbar-form navbar-right"}) do |f| %>
                  <div class="form-group">
                    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Iniciar sesión", class: "btn btn-success" %>
                  </div>
                  <div class="form-group">
                    <ul class="navbar navbar-nav navbar-right">
                      <li><%= link_to "Regístrate", signup_path %></li>
                    </ul>
                  </div>
              <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "MicroFinanciaciones CEU", root_path, id: "logo", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "¿Quiénes somos?", about_path %></li>
          <li><%= link_to "Contacte", contact_path %></li>
          <li><%= link_to "Ayuda", help_path %></li>
        </ul>
        <% if signed_in? && current_user.admin? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administración <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Proyectos", proyectos_path %></li>
                  <li><%= link_to "Usuario", users_path %></li>
                </ul>
              </li>
            </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= @current_user.name + ' ' + @current_user.family_name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Perfil de usuario", current_user %></li>
                  <li><%= link_to "Carrito", session_cart %></li>
                  <li><%= link_to 'Opciones', '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Cerrar sesión', signout_path, method: 'delete' %></li>
                </ul>
              </li>
          <% elsif !current_page?(signin_path) %>
              <li><%= link_to "Iniciar sesión", signin_path %></li>
              <li><%= link_to "Regístrate", signup_path %></li>
          <% elsif !current_page?(signup_path) %>
              <li><%= link_to "Iniciar sesión", signin_path %></li>
          <% else %>
              <li><%= link_to "Regístrate", signup_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
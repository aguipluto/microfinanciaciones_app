<header>
  <div id="menu-superior" class="navbar navbar-default navbar-fixed-top">
    <%= link_to image_tag("logo-ceu.png", alt: "Fundación Universitaria San Pablo CEU", class: "img-responsive pull-left", id: "img-nav-bar"), 'http://www.ceu.es/' %>
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "MicroFinanciaciones CEU", root_path, id: "logo", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown-open">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sobre nosotros <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "¿Quiénes somos?", about_path %></li>
              <li><%= link_to "Contacte", contact_path %></li>
              <li><%= link_to "Ayuda", help_path %></li>
            </ul>
          </li>
          <% if blog_editor_user? %>
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Blog", blog_path %></li>
                  <li><%= link_to "Nuevo Post", new_blog_post_path %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Blog", blog_path %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">

              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span id="cart-modal-count"
                    <% if session_cart.valid_cart_items.count>0 %>
                         class="badge"><%= session_cart.valid_cart_items.count %>
                    <% else %>
                        class="badge hidden">
                    <% end %>
                  </span>
                  <span class="glyphicon glyphicon-shopping-cart"></span>
                </a>

                <ul id="cart-modal-menu" class="dropdown-menu">
                  <div id="cart-modal" class="well " style=" position: absolute; top:0px; left: 0px">
                    <%= render 'cart/show2' %>
                  </div>
                </ul>
              </li>
          <% if signed_in? %>
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Perfil de usuario", current_user %></li>
                  <li><%= link_to "Carrito", session_cart %></li>
                  <li><%= link_to 'Opciones', '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Cerrar sesión', signout_path, method: 'delete' %></li>
                </ul>
              </li>
              <% if current_user.admin? %>
                  <li class="dropdown-open">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-wrench"></span><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Aportaciones", cartitem_indexadmin_path %></li>
                      <li><%= link_to "Blog", blog_posts_path %></li>
                      <li><%= link_to "Buzón" + suggestsNotShown, '/suggests', id: "unread_suggests" %></li>
                      <li><%= link_to "Proyectos", proyectos_path %></li>
                      <li><%= link_to "Usuarios", users_path %></li>
                    </ul>
                  </li>
              <% end %>
          <% elsif current_page?(signin_path) %>
              <li><%= link_to "Regístrate", signup_path %></li>
          <% elsif current_page?(signup_path) %>
              <li><%= link_to "Iniciar sesión", signin_path %></li>
          <% else %>
              <li><%= link_to "Iniciar sesión", signin_path %></li>
              <li><%= link_to "Regístrate", signup_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
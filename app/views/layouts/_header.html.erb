<header>
  <div id="menu-superior" class="navbar navbar-default navbar-fixed-top">

    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag('logoProyectoTransparenteSmall.png', alt: 'MicroFinanciaciones CEU', class: 'navbar-brand'), root_path %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if blog_editor_user? %>
              <li class="dropdown-open">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Blog", blog_path %></li>
                  <li><%= link_to "Nuevo Post", new_blog_post_path %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Blog", blog_path %></li>
          <% end %>
          <li class="dropdown-open">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Info
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to about_path do %>
                    <span class="glyphicon glyphicon-globe"></span>
                    ¿Quienes somos?
                    </li>
                <% end %>
                <li><%= link_to contact_path do %>
                      <span class="glyphicon glyphicon-envelope"></span>
                      Contacte</li>
                  <% end %>
                  <li><%= link_to help_path do %>
                        <span class="glyphicon glyphicon-question-sign"></span>
                        Ayuda
                    <% end %>
                  </li>
                  </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span id="cart-modal-count"
                        <% if session_cart.valid_cart_items.count>0 %>
                         class="badge"><%= session_cart.valid_cart_items.count %>
                    <% else %>
                        class="badge hidden">
                    <% end %>
                  </span>
              <span class="glyphicon glyphicon-shopping-cart"></span>
            </a>

            <ul id="cart-modal-menu" class="dropdown-menu dropdown-menu-md">
              <%= render 'cart/show2' %>
            </ul>
          </li>

          <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Perfil de usuario", current_user %></li>
                  <li><%= link_to "Carrito", session_cart %></li>
                  <li><%= link_to 'Opciones', '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to signout_path, method: 'delete' do %>
                        <span class="glyphicon glyphicon-log-out"></span>
                        Cerrar sesión
                    <% end %></li>
                </ul>
              </li>
              <% if current_user.admin? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-wrench"></span><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Aportaciones", cartitem_indexadmin_path %></li>
                      <li><%= link_to "Blog", blog_posts_path %></li>
                      <li><%= link_to "Buzón" + suggestsNotShown, '/suggests', id: "unread_suggests" %></li>
                      <li><%= link_to "Proyectos", proyectos_path %></li>
                      <li><%= link_to "Usuarios", users_path %></li>
                      <li><%= link_to "Voluntarios", volunteers_path %></li>
                    </ul>
                  </li>
              <% end %>
          <% elsif current_page?(signin_path) %>
              <li><%= link_to signup_path do %>
                    <span class="glyphicon glyphicon-plus"></span>
                    Regístrate
                <% end %></li>
          <% elsif current_page?(signup_path) %>
              <%= render 'layouts/header_login' %>
          <% else %>
              <%= render 'layouts/header_login' %>
              <li><%= link_to signup_path do %>
                    <span class="glyphicon glyphicon-plus"></span>
                    regístrate
                <% end %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
<% provide(:title, 'Registro') %>

<h1>Registro</h1>

<div class="row">
  <div class="center span6 well">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.label :first_name, 'Nombre' %>
        <%= f.text_field :first_name %>

        <%= f.label :second_name, 'Apellidos' %>
        <%= f.text_field :second_name %>

        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>

        <%= f.label :password, 'Contraseña'%>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Repita contraseña' %>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit "Registrarse", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>
      <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
<% provide(:title, 'Posts') %>

<div class="row">
  <div class="col-md-2">
    <h2>Posts</h2>
  </div>
  <div class="col-md-8" id="divBtnNuevoUsuario">
    <%= form_tag blog_posts_path, method: "get", class: "form-inline formBusqueda" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <p>
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Buscar', id: 'inputBuscar' %>
          <%= button_tag type: 'submit', class: 'btn btn-default', name: nil do %>
              <i class="fa fa-search"></i> Buscar
          <% end %>
          <%= link_to new_blog_post_path, class: 'btn btn-primary' do %>
              <i class="fa fa-plus"></i> Nuevo
          <% end %>
        </p>
    <% end %>
  </div>
</div>
<div class="row">
</div>
<div id="blog_posts">
  <%= render 'blog_posts' %>
</div>
